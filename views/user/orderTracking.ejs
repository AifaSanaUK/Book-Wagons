<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Tracking</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* General Styling */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
            color: #333;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background: #ffeef6;
            color: rgb(59, 59, 59);
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            position: fixed;
            height: 100vh;
            overflow-y: auto;
        }
        .sidebar h4 {
            font-size: 1.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 20px;
            color: #6d6b6b;
        }
        .sidebar a {
            color: rgb(59, 59, 59);
            text-decoration: none;
            display: block;
            padding: 10px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .sidebar a:hover {
            background-color: #34495e;
        }

        /* Main Content Container */
        .main-content {
            margin-left: 270px; /* To account for the sidebar */
            padding: 20px;
            width: calc(100% - 270px);
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        /* Tracking Container */
        .tracking-container {
            width: 100%;
            max-width: 800px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 90px;
            margin-right: 40px;
            text-align: center;
        }
        .tracking-container h2 {
            font-size: 2rem;
            color: #2c3e50;
            margin-bottom: 20px;
        }
        .tracking-container p {
            font-size: 1.1rem;
            color: #555;
            margin: 10px 0;
        }

        /* Tracking Steps */
        .tracking-steps {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }
        .tracking-step {
            flex: 1;
            padding: 15px;
            text-align: center;
            position: relative;
        }
        .tracking-step i {
            font-size: 32px;
            margin-bottom: 10px;
            color: #bdc3c7;
        }
        .tracking-step p {
            font-size: 1rem;
            color: #555;
            margin: 0;
        }
        .tracking-step.active i,
        .tracking-step.active p {
            color: #27ae60;
        }
        .tracking-step.cancelled i,
        .tracking-step.cancelled p {
            color: #e74c3c;
        }

        /* Table Styling */
        table {
            width: 100%;
            max-width: 800px;
            margin: 20px auto;
            border-collapse: collapse;
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        table th, table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        table th {
            background-color: #2c3e50;
            color: white;
        }
        table tr:hover {
            background-color: #f1f1f1;
        }

        /* Button Styles */
        button {
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }
        #cancelOrderBtn {
            background-color: #e67e22;
            color: white;
        }
        #cancelOrderBtn:hover {
            background-color: #d35400;
        }
        #returnOrderBtn {
            background-color: #e74c3c;
            color: white;
        }
        #returnOrderBtn:hover {
            background-color: #c0392b;
        }
        #submitReturnBtn {
            background-color: #27ae60;
            color: white;
        }
        #submitReturnBtn:hover {
            background-color: #219653;
        }

        /* Return Reason Section */
        #returnReasonDiv {
            display: none;
            margin-top: 20px;
            text-align: center;
        }
        #returnReason {
            width: 100%;
            max-width: 400px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
            margin-bottom: 10px;
            font-family: 'Poppins', sans-serif;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .sidebar {
                width: 100%;
                position: relative;
                height: auto;
                margin-bottom: 20px;
            }
            .main-content {
                margin-left: 0;
                width: 100%;
                padding: 10px;
            }
            .tracking-steps {
                flex-direction: column;
            }
            .tracking-step {
                margin-bottom: 20px;
            }
        }
    </style>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <%- include('../partials/header') %>
    <div class="container-fluid">
        <div class="sidebar">
            <h4 class="text-center">Dashboard</h4>
            <a href="/userProfile">Profile</a>
            <a href="/addressButton" id="addressLink">Address</a>
            <a href="/order">Order</a>
            <a href="/wallet">Wallet Status</a>
            <a href="/referrals">Referrals</a>
            <a href="/logoutt">Logout</a>
        </div>
        <div class="main-content">
            <div class="tracking-container">
                <h2>Order Tracking</h2>
                <p><strong>Order ID:</strong> <%= order.orderId %></p>
                <p><strong>Estimated Delivery Date:</strong> 
                    <%= order.estimatedDelivery ? order.estimatedDelivery.toDateString() : "Not Available" %>
                </p>
        
                <table>
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.orderedItems.forEach(item => { %>
                            <tr>
                                <td><%= item.product.productName %></td>
                                <td><%= item.quantity %></td>
                                <td>â‚¹<%= item.quantity * (item.product.salePrice || item.product.regularPrice) %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
        
                <div class="tracking-steps">
                    <% if (order.status === 'Cancelled') { %>
                        <div class="tracking-step cancelled">
                            <i class="fas fa-times-circle"></i>
                            <p>Order Cancelled</p>
                        </div>
                    <% } else { %>
                        <div class="tracking-step <%= order.status === 'Pending' || order.status === 'Processing' || order.status === 'Shipped' || order.status === 'Out for Delivery' || order.status === 'Delivered' ? 'active' : '' %>">
                            <i class="fas fa-shopping-cart"></i>
                            <p>Order Placed</p>
                        </div>
                        <div class="tracking-step <%= order.status === 'Shipped' || order.status === 'Out for Delivery' || order.status === 'Delivered' ? 'active' : '' %>">
                            <i class="fas fa-truck"></i>
                            <p>Shipped</p>
                        </div>
                        <div class="tracking-step <%= order.status === 'Out for Delivery' || order.status === 'Delivered' ? 'active' : '' %>">
                            <i class="fas fa-biking"></i>
                            <p>Out for Delivery</p>
                        </div>
                        <div class="tracking-step <%= order.status === 'Delivered' ? 'active' : '' %>">
                            <i class="fas fa-check-circle"></i>
                            <p>Delivered</p>
                        </div>
                    <% } %>
                </div>
        
                <div style="text-align: center; margin-top: 20px;">
                    <% if (order.status === 'Pending' || order.status === 'Processing') { %>
                        <button id="cancelOrderBtn">Cancel Order</button>
                    <% } else if (order.status === 'Shipped' || order.status === 'Out for Delivery' || order.status === 'Delivered') { %>
                        <button id="cancelOrderBtn" disabled style="background-color: gray; cursor: not-allowed;">Cancel Order</button>
                        <p style="color: #e74c3c; margin-top: 10px;">Your order can no longer be canceled.</p>
                    <% } else if (order.status.toLowerCase() === 'delivered') { %>
                        <button id="returnOrderBtn">Return Order</button>
                        <div id="returnReasonDiv" style="display: none;">
                            <textarea id="returnReason" placeholder="Enter return reason..." rows="3" cols="40"></textarea>
                            <br>
                            <button id="submitReturnBtn">Submit Return Request</button>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <script>
                 // -------------------------------------------------------------------------------------------------------

            document.getElementById("cancelOrderBtn")?.addEventListener("click", function () {
    Swal.fire({
        title: "Are you sure?",
        text: "Do you really want to cancel this order?",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, cancel it!",
        cancelButtonText: "No, keep it"
    }).then((result) => {
        if (result.isConfirmed) {
            fetch("/cancel-order/<%= order._id %>", {
                method: "POST",
                headers: { "Content-Type": "application/json" }
            })
            .then(response => response.json())
            .then(data => {
                if (data.message === "Order canceled successfully") {
                    Swal.fire({
                        title: "Order Cancelled!",
                        text: "Your order has been cancelled successfully.",
                        icon: "success",
                        timer: 2000, 
                        showConfirmButton: false
                    }).then(() => {
                    
                        document.querySelector(".tracking-steps").innerHTML = `
                            <div class="tracking-step cancelled">
                                <i class="fas fa-times-circle"></i>
                                <p>Order Cancelled</p>
                            </div>
                        `;

                        let cancelBtn = document.getElementById("cancelOrderBtn");
                        if (cancelBtn) {
                            cancelBtn.innerText = "Cancelled";
                            cancelBtn.disabled = true;
                            cancelBtn.style.backgroundColor = "gray";
                            cancelBtn.style.cursor = "not-allowed";
                        }
                    });
                } else {
                    Swal.fire("Error", data.message, "error");
                }
            })
            .catch(error => {
                console.error("Error:", error);
                Swal.fire("Error!", "Something went wrong!", "error");
            });
        }
    });
});
// -------------------------------------------------------------------------------------------------------

document.getElementById("returnOrderBtn")?.addEventListener("click", function () {
    Swal.fire({
        title: "Return Request",
        text: "You have 10 seconds to confirm your return request!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Proceed",
        cancelButtonText: "Cancel",
        timer: 10000,
        timerProgressBar: true
    }).then((result) => {
        if (result.isConfirmed) {
            document.getElementById("returnReasonDiv").style.display = "block";
        }
    });
});
        // -------------------------------------------------------------------------------------------------------

document.getElementById("submitReturnBtn")?.addEventListener("click", function () {
    const returnReason = document.getElementById("returnReason").value.trim();
    if (!returnReason) {
        Swal.fire("Error", "Please enter a reason for return.", "error");
        return;
    }

    fetch("/return-order", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ 
            orderId: "<%= order._id %>",  
            reason: returnReason 
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                title: "Success",
                text: "Return request submitted for admin approval.",
                icon: "success",
                timer: 2000, 
                showConfirmButton: false
            }).then(() => {
                location.reload(); 
            });
        } else {
            Swal.fire("Error", data.message, "error");
        }
    })
    .catch(error => {
        console.error("Error:", error);
        Swal.fire("Error!", "Something went wrong!", "error");
    });
});


`<% if (order.status === 'Out for Delivery') { %>
    Swal.fire({
        title: "Order Update",
        text: "Your order is out for delivery! Expect it soon.",
        icon: "info"
    });
<% } %>`
</script>
</body>
</html>
