<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Basic Page Styling */
        * {
            box-sizing: border-box;
        }
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .container {
            text-align: center;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
            max-width: 400px; /* Reduced from 500px */
            width: 100%;
            animation: fadeIn 1s ease-in-out;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th {
            background-color: #f8d7da;
            color: #721c24;
            padding: 15px;
            font-size: 24px;
            border: 1px solid #f5c6cb;
        }
        td {
            padding: 15px;
            border: 1px solid #ddd;
            font-size: 18px;
        }
        /* Button Styles */
        .btn {
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin: 5px;
            transition: background-color 0.3s ease;
        }
        .btn-primary {
            background-color: #007bff;
            color: white;
        }
        .btn-secondary {
            background-color: #6c757d;
            color: white;
            text-decoration: none;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
        }

        /* Smooth Fade-in Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Inner Container Styling */
        .inner-container {
            background-color: #f8d7da;
            padding: 15px; /* Reduced padding */
            border-radius: 10px;
        }
        h2 {
            color: #dc3545;
            margin: 10px 0; /* Adjusted margin */
        }
        img {
            width: 150px; /* Reduced image size */
            margin-top: 10px;
        }
        p {
            margin: 10px 0; /* Adjusted margin */
        }
        .btn-group {
            margin-top: 15px; /* Adjusted margin */
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="inner-container">
            <h2>Transaction Failed</h2>
            <img src="<%= illustration %>" alt="Failure Illustration">
            
            <p><strong>Order ID:</strong> <%= orderId %></p>
            <p><%= message %></p>
    
            <div class="btn-group">
                <button onclick="retryPayment()" class="btn btn-primary">ðŸ”„ Retry Payment</button>
                <button onclick="window.location.href='/shop'" class="btn btn-secondary">Back to Shop</button>
            </div>
        </div>
    </div>
    
    <script>
       
        const orderId = "<%= orderId %>";

        function retryPayment() {
            if (!orderId) {
                alert("Order ID not found!");
                return;
            }

            fetch(`/payment/retry-payment/${orderId}`, { 
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = data.paymentPage;
                } else {
                    alert(data.message || "Failed to retry payment.");
                }
            })
            .catch(err => {
                console.error(err);
                alert("Something went wrong. Please try again.");
            });
        }
    </script>
</body>
</html>