<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            background-color: #111;
            display: flex;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }
        .sidebar {
            width: 250px;
            background: #828282;
            color: white;
            height: 100vh;
            padding-top: 20px;
            position: fixed;
            text-align: center;
        }
        .profile-section {
            padding: 20px;
        }
        .profile-pic {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar ul li {
            padding: 15px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: start;
        }
        .sidebar ul li:hover {
            background: #150107;
        }
        .sidebar ul li a {
            text-decoration: none;
            color: white;
            font-weight: 500;
            font-size: 16px;
            display: flex;
            align-items: center;
        }
        .sidebar ul li a i {
            margin-right: 15px;
        }
        .content {
            margin-left: 250px;
            padding: 20px;
            width: 100%;
        }
        .header {
            background: white;
            padding: 30px;
            text-align: center;
            border-radius: 8px;
            width: 90%;
            margin: 20px auto;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }
        .header h1 {
            color: #150107;
            margin: 0;
        }
        #button {
            border-radius: 30px;
            background-color: rgb(141, 141, 141);
            margin-top: 30px;
            padding: 10px 20px;
            border: none;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
        }
        #button:hover {
            background-color: black;
            color: #ffffff;
        }
        .search-bar {
            width: 80%;
            margin: 20px 0;
            position: relative;
            display: flex;
            align-items: center;
        }
        .search-bar input {
            flex: 1;
            padding: 10px 40px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
        }
        .search-bar i {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #aaa;
        }
        .search-bar button {
            padding: 10px 20px;
            border: none;
            background: #150107;
            color: white;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            margin-left: 10px;
        } #statusFilter{
            flex: 1;
            padding: 10px 40px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
            margin-left: 100px;

        }
        .order-table {
            width: 100%;
            background: #222;
            color: white;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .order-table th, .order-table td {
            padding: 15px;
            border: 1px solid #555;
            text-align: left;
        }
        .order-table th {
            background: #333;
        }
        .order-table td {
            position: relative;
        }
        .order-table td::after {
            content: '';
            position: absolute;
            right: 0;
            top: 10%;
            height: 80%;
            width: 1px;
            background: #555;
        }
        .order-table td:last-child::after {
            display: none;
        }
        .view-button {
            background: #150107;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 14px;
            transition: 0.3s;
        }
        .view-button:hover {
            background: #333;
        }
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }
        .pagination button {
            background: #150107;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 0 5px;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
        }
        .pagination button:hover {
            background: #333;
        }
        .pagination span {
            margin: 0 10px;
            color: white;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="profile-section">
            <img src="/images/WhatsApp Image 2025-03-04 at 21.15.51_2d23995d.jpg" alt="Profile Picture" class="profile-pic">
            <h3>Aifa Sana</h3>
        </div>
        <ul>
            <li><a href="/admin/dashboard"><i class="fa-solid fa-gauge"></i> Dashboard</a></li>
            <li><a href="/admin/customers"><i class="fa-solid fa-users"></i> Customers</a></li>
            <li><a href="/admin/category"><i class="fa-solid fa-layer-group"></i> Genre</a></li>
            <li><a href="/admin/addProducts/"><i class="fa-solid fa-plus-circle"></i> Add Products</a></li>
            <li><a href="/admin/products"><i class="fa-solid fa-box"></i> Products</a></li>
            <li><a href="/admin/coupon"><i class="fa-solid fa-tag"></i> Coupons</a></li>
            <li><a href="/admin/banner"><i class="fa-solid fa-image"></i> Banner</a></li>
            <li><a href="/admin/orders"><i class="fa-solid fa-cart-shopping"></i> Orders</a></li>
            <li><a href="/admin/stock-management"><i class="fa-solid fa-image"></i>Stock Management</a></li>
            <li><a href="/admin/sales-report"><i class="fas fa-chart-bar"></i>Sales Report</a></li>
            <div>
                <form action="/admin/logout" method="GET">
                    <button type="submit" id="button">Logout</button>
                </form>
            </div>
        </ul>
    </div>
    <div class="content">
        <div class="header">
            <h1>Order Management</h1>    
        </div>
        <div class="search-bar">
            <i class="fa-solid fa-search"></i>
            <input type="text" id="search" placeholder="Search by Order ID...">
            <select id="statusFilter">
                <option class="All" value="">All</option>
                <option value="Pending">Pending</option>
                <option value="Shipped">Shipped</option>
                <option value="Delivered">Delivered</option>
                <option value="Cancelled">Cancelled</option>
                <option value="return request">Return Request</option>
            </select>
            <button onclick="applyFilters()">Apply</button>
        </div>
    
        <!-- Order Table -->
        <table class="order-table">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Date</th>
                    <th>User</th>
                    <th>Status</th>
                    <th>Payment Method</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.orderId %></td>
                        <td><%= new Date(order.createdOn).toLocaleDateString("en-GB") %></td>
                        <td>
                            <% if (order.user) { %>
                                <%= order.user.name %> (<%= order.user.email %>)
                            <% } else { %>
                                <span class="text-danger">User Deleted</span>
                            <% } %>
                        </td>
                        
                        
                        <td id="status-<%= order._id %>">
                            <% if (order.status === "Cancelled") { %>
                                <span class="cancelled-status" onclick="showCancelReason('<%= order._id %>')" style="color: red; cursor: pointer;">
                                    Cancelled
                                </span>
                            <% } else { %>
                                <%= order.status %>
                            <% } %>
                        </td>
                        
                        <td><%= order.paymentMethod %></td>
                        
                  
                        <td id="action-<%= order._id %>">
                            <% if (order.status === "Return Requested") { %>
                                <button onclick="processReturn('<%= order._id %>', 'Approved')" id="approve-btn-<%= order._id %>">Approve</button>
                                <button onclick="processReturn('<%= order._id %>', 'Rejected')" id="reject-btn-<%= order._id %>">Reject</button>
                            <% } else { %>
                                <a href="/admin/orders/<%= order._id %>" class="btn btn-info">View</a>
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            
            
            
        </table>
    
      
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="/admin/orders?page=<%= currentPage - 1 %>&search=<%= search %>&status=<%= status %>" class="btn btn-dark">
                    <i class="fa-solid fa-chevron-left"></i> Previous
                </a>
            <% } %>
        
            <span>Page <%= currentPage %> of <%= totalPages %></span>
        
            <% if (currentPage < totalPages) { %>
                <a href="/admin/orders?page=<%= currentPage + 1 %>&search=<%= search %>&status=<%= status %>" class="btn btn-dark">
                    Next <i class="fa-solid fa-chevron-right"></i>
                </a>
            <% } %>
        </div>
        
    </div>

    <script>
         // -------------------------------------------------------------------------------------------------------

       function applyFilters() {
    const search = document.getElementById('search').value;
    const status = document.getElementById('statusFilter').value;
    window.location.href = `/admin/orders?page=1&search=${search}&status=${status}`;
}

        function prevPage() {  }
        function nextPage() {  }
       

        function processReturn(orderId, decision) {
    fetch(`/admin/orders/approve-return`, {
        method: "PUT",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ orderId, decision }),
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
          
            document.getElementById(`status-${orderId}`).innerText = data.newStatus;

           
            document.getElementById(`action-${orderId}`).innerHTML = `
                <a href="/admin/orders/${orderId}" class="btn btn-info">View</a>
            `;

         
            Swal.fire({
                icon: "success",
                title: `Return ${decision}`,
                text: `The return request has been ${decision.toLowerCase()}.`,
            });
        } else {
            Swal.fire({ icon: "error", title: "Error", text: data.message });
        }
    })
    .catch(error => {
        console.error("Return approval error:", error);
        Swal.fire({ icon: "error", title: "Error", text: "An error occurred while processing the return request." });
    });
}


function showCancelReason(orderId) {
    console.log("Order ID Sent:", orderId); 

    fetch(`/admin/order/cancel-reason/${orderId}`)
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                Swal.fire({
                    title: "Cancellation Reason",
                    text: data.reason,
                    icon: "info",
                    confirmButtonText: "OK"
                });
            } else {
                Swal.fire("Error", data.message || "Could not fetch the cancellation reason.", "error");
            }
        })
        .catch(error => {
            console.error("Error fetching cancellation reason:", error);
            Swal.fire("Error", "Something went wrong!", "error");
        });
}


    </script>
</body>
</html>