<body>
    <div class="sidebar">
        <div class="profile-section">
            <img src="/images/WhatsApp Image 2025-03-04 at 21.15.51_2d23995d.jpg" alt="Profile Picture" class="profile-pic">
            <h3>Aifa Sana</h3>
        </div>
        <ul>
            <li><a href="/admin/dashboard"><i class="fa-solid fa-gauge"></i> Dashboard</a></li>
            <li><a href="/admin/customers"><i class="fa-solid fa-users"></i> Customers</a></li>
            <li><a href="/admin/category"><i class="fa-solid fa-layer-group"></i> Genre</a></li>
            <li><a href="/admin/addProducts/"><i class="fa-solid fa-plus-circle"></i> Add Products</a></li>
            <li><a href="/admin/products"><i class="fa-solid fa-box"></i> Products</a></li>
            <li><a href="/admin/coupon"><i class="fa-solid fa-tag"></i> Coupons</a></li>
            <li><a href="/admin/banner"><i class="fa-solid fa-image"></i> Banner</a></li>
            <li><a href="/admin/orders"><i class="fa-solid fa-cart-shopping"></i> Orders</a></li>
            <li><a href="/admin/stock-management"><i class="fa-solid fa-image"></i>Stock Management</a></li>
            <li><a href="/admin/sales-report"><i class="fas fa-chart-bar"></i>Sales Report</a></li>
            <div>
                <form action="/admin/logout" method="GET">
                    <button type="submit" id="button">Logout</button>
                </form>
            </div>
        </ul>
    </div>    <div class="content">
        <div class="header">
            <h1>Inventory Management</h1>
        </div>
        <form action="/admin/stock-management" method="GET">
            <input type="text" name="search" id="searchInput" class="search-bar" placeholder="Search products..." value="<%= searchQuery || '' %>">
            <button type="submit">Search</button>
            <button type="button" onclick="clearSearch()">Clear</button>
        </form>

    <table border="1" class="stock-table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Update Stock</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.productName %></td>
                    <td><%= product.category.name %></td>
                    <td>â‚¹<%= product.salePrice %></td>
                    <td><%= product.quantity %></td>
                    <td><%= product.quantity == 0 ? "Out of Stock" : "Available" %></td>

                    <td>
                        <form action="/admin/update-stock/<%= product._id %>" method="POST">
                            <input type="number" name="quantity" min="0" value="<%= product.quantity %>" required>
                            <button type="submit"  class="update" >Update</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/admin/stock-management?page=<%= currentPage - 1 %>&search=<%= searchQuery || '' %>">Prev</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/admin/stock-management?page=<%= i %>&search=<%= searchQuery || '' %>" 
               class="<%= currentPage === i ? 'active' : '' %>">
               <%= i %>
            </a>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <a href="/admin/stock-management?page=<%= currentPage + 1 %>&search=<%= searchQuery || '' %>">Next</a>
        <% } %>
    </div>
<script>
      function clearSearch() {
        document.getElementById('searchInput').value = '';
        window.location.href = '/admin/stock-management';
    }
</script>
</body>
