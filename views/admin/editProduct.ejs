            <script>
                // --------------------------------------------------------------------
       let cropper;  
function validateForm() {
    const productName = document.getElementById("product_name").value.trim();
    const description = document.getElementById("dec").value.trim();
    const regularPrice = document.getElementById('regular_price').value.trim();
    const salePrice = document.getElementById('sale_price').value.trim();
    const quantity = document.getElementById('quantity').value.trim();
    const category = document.getElementById('category').value.trim();
    const image1 = document.getElementById('image1').files.length;
    const image2 = document.getElementById('image2').files.length;
    const image3 = document.getElementById('image3').files.length;

    const nameRegex = /^[A-Za-z\s]{4,}$/;

    if (!nameRegex.test(productName)) {
        Swal.fire("Invalid Name", "Product name must be at least 4 letters and contain only alphabets.", "error");
        return false;
    }

    if (description.length < 10) {
        Swal.fire("Invalid Description", "Description must be at least 10 characters long.", "error");
        return false;
    }

    if (regularPrice === "" || isNaN(regularPrice) || parseFloat(regularPrice) <= 0) {
        Swal.fire("Invalid Regular Price", "Regular price must be a valid number greater than 0.", "error");
        return false;
    }

    if (salePrice !== "" && parseFloat(salePrice) > parseFloat(regularPrice)) {
        Swal.fire("Invalid Sale Price", "Sale price cannot be greater than regular price.", "error");
        return false;
    }

    if (quantity === "" || isNaN(quantity) || parseInt(quantity) <= 0) {
        Swal.fire("Invalid Quantity", "Quantity must be a valid number greater than 0.", "error");
        return false;
    }

    if (!category) {
        Swal.fire("Category Required", "Please select a category.", "error");
        return false;
    }

    return true;
}

// ------------------------------------------------------------------------------
document.getElementById("productForm").addEventListener("submit", function(event) {
    if (!validateForm()) {
        event.preventDefault();
    }
});

function previewImage(event, index) {
    const file = event.target.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
            showCropperModal(e.target.result, index);
        };
        reader.readAsDataURL(file);
    }
}
// ------------------------------------------------------------------------------
function showCropperModal(imageSrc, index) {
    Swal.fire({
        title: 'Crop Image',
        html: '<img id="cropperImage" src="' + imageSrc + '" style="max-width:100%;">',
        showCancelButton: true,
        confirmButtonText: 'Crop',
        willOpen: () => {
            const image = document.getElementById('cropperImage');
            cropper = new Cropper(image, {
                aspectRatio: 1,
                viewMode: 2,
            });
        },
        preConfirm: () => {
            return new Promise((resolve) => {
                if (cropper) {
                    resolve(cropper.getCroppedCanvas().toDataURL());
                } else {
                    resolve(imageSrc); 
                }
            });
        }
    }).then((result) => {
        if (result.isConfirmed) {
            document.getElementById(`preview${index}`).src = result.value;
        }
    });
}
// -------------------------------------------------------------------------------------------
async function deleteSingleImage(imageName, productId) {
    console.log("Deleting Image:", imageName); 
    console.log("Product ID:", productId); 

    const confirmDelete = await Swal.fire({
        title: "Are you sure?",
        text: "This image will be permanently deleted!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonText: "Yes, delete it!",
        cancelButtonText: "Cancel"
    });

    if (confirmDelete.isConfirmed) {
        try {
            const response = await fetch(`/admin/deleteImage/${productId}/${encodeURIComponent(imageName)}`, {
                method: "DELETE",
            });

            const data = await response.json();
            if (response.ok) {
                Swal.fire("Deleted!", data.message, "success");
                document.querySelectorAll(".image-preview").forEach((img) => {
                    if (img.src.includes(imageName)) {
                        img.src = "/uploads/productImages/default.jpg";
                    }
                });
            } else {
                Swal.fire("Error", data.message, "error");
            }
        } catch (error) {
            Swal.fire("Error", "Something went wrong!", "error");
            console.error("Delete Error:", error);
        }
    }
}
