        </ul>
        <form action="/admin/logout" method="GET">
            <button type="submit" style="margin-top: 20px; padding: 10px 20px; border-radius: 30px; background: #333; color: white; border: none;">Logout</button>
        </form>
    </div>
    <div class="content">
        <div class="header">
            <h1>Add New Product</h1>
        </div>
        <div class="form-container">
            <form action="/admin/addProducts" method="POST" enctype="multipart/form-data" id="productForm">
                <table>
                    <tr>
                        <td><label>Product Name</label></td>
                        <td><input type="text" name="product_name" id="product_name"></td>
                    </tr>
                    <tr>
                        <td><label>Full Description</label></td>
                        <td><textarea name="description" rows="4" id="dec" required></textarea></td>
                    </tr>
                    <tr>
                        <td><label>Regular Price ($)</label></td>
                        <td><input type="number" name="regular_price" id="regular_price" required></td>
                    </tr>
                    <tr>
                        <td><label>Sale Price ($)</label></td>
                        <td><input type="number" name="sale_price" id="sale_price"></td>
                    </tr>
                    <tr>
                        <td><label>Quantity</label></td>
                        <td><input type="number" name="quantity" id="quantity" required></td>
                    </tr>
                    <tr>
                        <td><label>Category</label></td>
                        <td>
                            <select name="category" id="category">
                                <% if (cat && cat.length > 0) { %>
                                    <% for (let i = 0; i < cat.length; i++) { %>
                                        <option value="<%= cat[i].name %>"><%= cat[i].name %></option>
                                    <% } %>
                                <% } else { %>
                                    <option value="">No Categories Available</option>
                                <% } %>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><label>Upload Images</label></td>
